@using HomeXplorer.Common;
@using HomeXplorer.Data.Entities;
@using System.Security.Claims;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User as ClaimsPrincipal);
}

<ul class="navbar-nav">
    @if (this.SignInManager.IsSignedIn(User) && await this.UserManager.IsInRoleAsync(user, UserRoleConstants.Agent))
    {
        <li class="nav-item">
            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>

        <li class="nav-item">
            <a class="nav-link " href="about.html">My Properties</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" asp-area="Agent" asp-controller="Property" asp-action="Add">Add Property</a>
        </li>

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Profile</a>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="property-single.html">Property Single</a>
                <a class="dropdown-item" href="blog-single.html">Blog Single</a>
                <a class="dropdown-item" href="agents-grid.html">Agents Grid</a>
                <form class="dropdown-item" asp-controller="User" asp-action="Logout" asp-route-id="@UserManager.GetUserId(User)">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </div>
        </li>
    }
    else if (this.SignInManager.IsSignedIn(User) && await this.UserManager.IsInRoleAsync(user, UserRoleConstants.Renter))
    {
        <li class="nav-item">
            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>

        <li class="nav-item">
            <a class="nav-link " href="about.html">My Favourites</a>
        </li>

        <li class="nav-item">
            <a class="nav-link " href="property-grid.html">My Rented</a>
        </li>

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Profile</a>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="property-single.html">Property Single</a>
                <a class="dropdown-item" href="blog-single.html">Blog Single</a>
                <a class="dropdown-item" href="agents-grid.html">Agents Grid</a>
                <form class="dropdown-item" asp-controller="User" asp-action="Logout" asp-route-id="@UserManager.GetUserId(User)">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link active" asp-area="" asp-controller="User" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-area="" asp-controller="User" asp-action="Register">Register</a>
        </li>
    }
</ul>