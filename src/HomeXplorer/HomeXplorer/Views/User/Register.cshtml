@model RegisterViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
}

<form id="registerForm" method="post">
    <section class="h-100 bg-dark">
        <div class="container py-3">
            <div class="row d-flex justify-content-center">
                <div class="col">
                    <div class="card card-registration my-4">
                        <div class="row g-0">
                            <div class="col-xl-6 d-none d-xl-block">
                                <img src="~/assets/register.jpg"
                                     alt="Sample photo" class="img-fluid"
                                     style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                            </div>
                            <div class="col-xl-6">
                                <div class="card-body p-md-3 text-black">
                                    <h3 class="mb-4 text-uppercase">Student registration form</h3>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <div class="form-outline">
                                                <input type="text" id="form3Example1m" class="form-control form-control-sm" />
                                                <label class="form-label" for="form3Example1m">First name</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <div class="form-outline">
                                                <input type="text" id="form3Example1n" class="form-control form-control-sm" />
                                                <label class="form-label" for="form3Example1n">Last name</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input type="text" id="form3Example8" class="form-control form-control-sm" />
                                        <label class="form-label" for="form3Example8">Email</label>
                                    </div>

                                    <div class="d-md-flex justify-content-start align-items-center mb-3 py-1">
                                        <h6 class="mb-0 me-3">Role:</h6>
                                        <div class="form-check form-check-inline mb-0 me-3">
                                            <input asp-for="Role" class="form-check-input" type="radio" id="agent"
                                                   value="Agent" />
                                            <label class="form-check-label" for="agent">Agent</label>
                                        </div>
                                        <div class="form-check form-check-inline mb-0 me-3">
                                            <input asp-for="Role" class="form-check-input" type="radio" id="renter"
                                                   value="Renter" />
                                            <label class="form-check-label" for="renter">Renter</label>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input type="text" id="form3Example9" class="form-control form-control-sm" />
                                        <label class="form-label" for="form3Example9">Password</label>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input type="text" id="form3Example90" class="form-control form-control-sm" />
                                        <label class="form-label" for="form3Example90">Confirm Password</label>
                                    </div>

                                    <div class="d-flex justify-content-end pt-2">
                                        <button type="button" class="btn btn-light btn-sm">Reset all</button>
                                        <button type="submit" class="btn btn-warning btn-sm ms-2">Register</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

