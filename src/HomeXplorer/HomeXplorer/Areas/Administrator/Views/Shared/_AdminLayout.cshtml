                                    <a asp-area="Administrator" asp-controller="Dashboard" asp-action="PendingReviews">
                                        Pending for approvement
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="show-cat-btn" href="##">
                                <span class="icon folder" aria-hidden="true"></span>Countries
                                <span class="category__btn transparent-btn" title="Open list">
                                    <span class="sr-only">Open list</span>
                                    <span class="icon arrow-down" aria-hidden="true"></span>
                                </span>
                            </a>
                            <ul class="cat-sub-menu">
                                <li>
                                    <a asp-area="Administrator" asp-controller="Dashboard" asp-action="AllCountries">
                                        All countries
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="Administrator" asp-controller="Dashboard" asp-action="AddCountry">
                                        Add new country
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="show-cat-btn" href="##">
                                <span class="icon image" aria-hidden="true"></span>Cities
                                <span class="category__btn transparent-btn" title="Open list">
                                    <span class="sr-only">Open list</span>
                                    <span class="icon arrow-down" aria-hidden="true"></span>
                                </span>
                            </a>
                            <ul class="cat-sub-menu">
                                <a asp-area="Administrator" asp-controller="Dashboard" asp-action="AllCities">
                                    All cities
                                </a>
