                        <li>
                            <a class="show-cat-btn" href="##">
                                <span class="icon image" aria-hidden="true"></span>Building Types
                                <span class="category__btn transparent-btn" title="Open list">
                                    <span class="sr-only">Open list</span>
                                    <span class="icon arrow-down" aria-hidden="true"></span>
                                </span>
                            </a>
                            <ul class="cat-sub-menu">
                                <a asp-area="Administrator" asp-controller="Dashboard" asp-action="AllBuildingTypes">
                                    All building types
                                </a>
                                <a asp-area="Administrator" asp-controller="Dashboard" asp-action="AddBuildingType">
                                    Add new building type
                                </a>
                            </ul>
                        </li>
                    </ul>
                    <span class="system-menu__title">system</span>
                    <ul class="sidebar-body-menu">
                        <li>
                            <a class="show-cat-btn" href="##">
                                <span class="icon user-3" aria-hidden="true"></span>Users
                                <span class="category__btn transparent-btn" title="Open list">
                                    <span class="sr-only">Open list</span>
                                    <span class="icon arrow-down" aria-hidden="true"></span>
                                </span>
                            </a>
                            <ul class="cat-sub-menu">
                                <a asp-area="Administrator" asp-controller="Dashboard" asp-action="AllAgents">
                                    Check all Agents
                                </a>
                                <a asp-area="Administrator" asp-controller="Dashboard" asp-action="AllRenters">
                                    Check all Renters
                                </a>
                            </ul>
                        </li>
                        <li>
                            <a href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();">
                                <span class="icon setting" aria-hidden="true"></span>Logout
                            </a>
                            <form id="logoutForm" asp-area="" asp-controller="User" asp-action="Logout" asp-route-id="@UserManager.GetUserId(User)" method="post" style="display: none;">
                            </form>
                        </li>

                    </ul>
                </div>
            </div>

        </aside>

        <div class="main-wrapper">
            <!-- ! Main nav -->
            <nav class="main-nav--bg">
                <div class="container main-nav">
                    
                    <div class="main-nav-end">
                        <button class="sidebar-toggle transparent-btn" title="Menu" type="button">
                            <span class="sr-only">Toggle menu</span>
                            <span class="icon menu-toggle--gray" aria-hidden="true"></span>
                        </button>

                        <button class="theme-switcher gray-circle-btn" type="button" title="Switch theme">
                            <span class="sr-only">Switch theme</span>
                            <i class="sun-icon" data-feather="sun" aria-hidden="true"></i>
                            <i class="moon-icon" data-feather="moon" aria-hidden="true"></i>
                        </button>
