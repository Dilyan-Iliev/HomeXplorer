@model AddNonExistingCountryViewModel

<article class="sign-up">
    <div>
        @if (this.TempData.ContainsKey("InvalidCountryAdded"))
        {
            <h4 class="text text-center text-danger">@this.TempData["InvalidCountryAdded"]</h4>
        }
    </div>

    <h3 class="sign-up__title">Add new country</h3>
    <form class="sign-up-form form" method="post">

        <label asp-for="@Model.Name" class="form-label-wrapper">
            <p class="form-label">Country Name</p>
            <input asp-for="@Model.Name" class="form-input" type="text" placeholder="Enter country name" required>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </label>

        <button type="submit" class="form-btn primary-default-btn transparent-btn">Add new country</button>
    </form>
</article>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}