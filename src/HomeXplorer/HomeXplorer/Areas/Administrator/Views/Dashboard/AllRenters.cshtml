@model IEnumerable<AllRentersViewModel>

@section Styles {
    <link rel="stylesheet" href="~/admin/css/users.css" />
}

<div class="content">
    <div class="container">

        <div class="row">
            @foreach (var renter in Model)
            {
                <div class="col-md-4">
                    <div class="text-center card-box member-card-container">
                        <div class="thumb-lg member-thumb mx-auto">
                            <img src="@renter.ProfileImageUrl" class="rounded-circle img-thumbnail"
                                 alt="profile-image" style="width: 88px; height: 88px;">
                        </div>
                        <div class="">
                            <h4>@renter.FullName</h4>
                            <p class="text-muted">
                                @renter.Role <span>| </span><span>
                                    @renter.Country - @renter.City
                                </span>
                            </p>
                        </div>

                        <div class="mt-4">
                            <div class="row">
                                <div class="col-4">
                                    <div class="mt-3">
                                        <h4>@renter.TotalPropertiesRented</h4>
                                        <p class="mb-0 text-muted">Total properties rented</p>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="mt-3">
                                        <h4>@renter.TotalPropertiesLiked</h4>
                                        <p class="mb-0 text-muted">Total liked properties</p>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="mt-3">
                                        <h4>@renter.TotalReviewsAdded</h4>
                                        <p class="mb-0 text-muted">Total reviews added</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>