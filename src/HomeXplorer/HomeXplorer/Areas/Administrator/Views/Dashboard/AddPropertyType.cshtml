@model AddNonExistingPropertyTypeViewModel

<article class="sign-up">
    <div>
        @if (this.TempData.ContainsKey("InvalidPropertyTypeAdded"))
        {
            <h4 class="alert alert-danger text-center">@this.TempData["InvalidPropertyTypeAdded"]</h4>
        }
    </div>

    <h3 class="sign-up__title">Add new property type</h3>
    <form class="sign-up-form form" method="post">

        <label asp-for="@Model.Name" class="form-label-wrapper">
            <p class="form-label">Property Type</p>
            <input asp-for="@Model.Name" class="form-input" type="text" placeholder="Enter property type" required>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </label>

        <button type="submit" class="form-btn primary-default-btn transparent-btn">Add new property type</button>
    </form>
</article>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}