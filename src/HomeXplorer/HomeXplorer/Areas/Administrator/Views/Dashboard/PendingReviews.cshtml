@model IEnumerable<DashboardReviewViewModel>

<div class="container">

    @if (this.TempData.ContainsKey("SuccessfullyDeleted"))
    {
        <div class="text-center text-info">
            @this.TempData["SuccessfullyDeleted"]
        </div>
    })

    @if (this.TempData.ContainsKey("SuccessfullyApproved"))
    {
        <div class="text-center text-success">
            @this.TempData["SuccessfullyApproved"]
        </div>
    })

    <div class="row">
        <div class="col-lg-7 mx-auto">
            <div class="users-table table-wrapper">
                @if (Model.Any())
                {
                    <table class="posts-table">
                        <thead>
                            <tr class="users-table-info">
                                <th>Short Description</th>
                                <th>Author</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in Model)
                            {
                                <tr>
                                    <td>
                                        @review.Description
                                    </td>
                                    <td>
                                        <div class="pages-table-img">
                                            <picture>
                                                <source srcset="@review.ReviewCreatorAvatarUrl" type="image/webp">
                                                <img src="@review.ReviewCreatorAvatarUrl" alt="User Name">
                                            </picture>
                                            @review.ReviewCreatorName
                                        </div>
                                    </td>
                                    @review.IsApproved ?
                                    <td><span class="badge-active">Active</span></td>
                                    :
                                    <td><span class="badge-pending">Pending</span></td>

                                    <td>@review.AddedOn</td>

                                    <td>
                                        <span class="p-relative">
                                            <button class="dropdown-btn transparent-btn" type="button" title="More info">
                                                <div class="sr-only">More info</div>
                                                <i data-feather="more-horizontal" aria-hidden="true"></i>
                                            </button>
                                            <ul class="users-item-dropdown dropdown">
                                                <li>
                                                    @*<a asp-area="Administrator" asp-controller="Dashboard" asp-action="ApproveReview" asp-route-id="@review.Id">
                                            <i class="fas fa-check-circle text-success"></i> Approve
                                            </a>*@
                                                    <!-- Approve Form -->
                                                    <form asp-area="Administrator" asp-controller="Dashboard" asp-action="ApproveReview" asp-route-id="@review.Id" id="approveForm_@review.Id" style="display: none;">
                                                        <!-- Hidden fields or any other necessary data for the form -->
                                                        <button type="submit" title="Approve"
                                                                onclick="return confirm('Are you sure you want to approve this review:')">
                                                            <i class="fas fa-check-circle text-success"></i> Approve
                                                        </button>
                                                    </form>
                                                </li>

                                                <li>
                                                    @*<a asp-area="Administrator" asp-controller="Dashboard" asp-action="DeleteReview" asp-route-id="@review.Id">
                                            <i class="fas fa-times-circle text-danger"></i> Trash
                                            </a>*@

                                                    <!-- Delete Form -->
                                                    <form asp-area="Agent" asp-controller="Property" asp-action="Delete" asp-route-id="@review.Id" id="deleteForm_@review.Id" onsubmit="return confirm('Are you sure you want to delete this review?');" style="display: none;">
                                                        <!-- Hidden fields or any other necessary data for the form -->
                                                        <button type="submit" title="Trash"
                                                                onclick="return confirm('Are you sure you want to delete this review:')">
                                                            <i class="fas fa-times-circle text-danger"></i> Trash
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div>
                        <h3 class="text-center">No pending reviews yet</h3>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
