@model IndexSliderPropertyViewModel

<div class="swiper-slide carousel-item-a intro-item bg-image" style="background-image: url(@Model.CoverImageUrl)">
    <div class="overlay overlay-a"></div>
    <div class="intro-content display-table">
        <div class="table-cell">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="intro-body">
                            <p class="intro-title-top">
                                @Model.City
                                <br> @Model.Country
                            </p>
                            <h1 class="intro-title mb-4 ">
                                <span class="color-b">204 </span> Mount
                                <br> @Model.Name
                            </h1>
                            <p class="intro-subtitle intro-price">
                                <a asp-area="Renter" asp-controller="Home" asp-action="Index"
                                   asp-route-id="@Model.Id"><span class="price-a">See More</span></a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>